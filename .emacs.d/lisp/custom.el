;; 不显示GNU emacs启动界面

(setq inhibit-startup-message t)

;; 用 y-or-n-p 替换 yes-or-no

(fset 'yes-or-no-p 'y-or-n-p)

;; 不显示菜单栏

(menu-bar-mode 0)

;; 不显示工具栏

(tool-bar-mode 0)

;; 不显示滚动条

(scroll-bar-mode 0)

;; 启动默认设置显示行号

(global-linum-mode t) 

;; 设置tab为4个空格的宽度

(setq default-tab-width 4)

;; 开启语法高亮

(global-font-lock-mode 1)

;; 设置字体和字体大小

(set-default-font "Consolas-14")
;; cua-mode

(cua-mode t)
;; 全局激活 company补全
(global-company-mode 1)

;; 关闭光标样式

(setq cursor-type 'bar)

(provide 'custom)
